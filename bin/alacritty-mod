#!/bin/bash

MODE="${1:-theme}"

function get-items {
    current_item=$(readlink -f ~/.config/alacritty/${MODE}.yml | xargs basename | sed "s,\.yml,,g")
    for e in $(ls /usr/share/alacrittheme/${MODE}s/ | sed "s/\.yml//g"); do
        if [ "${current_item}" = "${e}" ]; then
            tput setaf 2
            echo "${e}"
            tput sgr0
        else
            tput setaf 2
            tput sgr0
            echo "${e}"
        fi
    done
}

if [ -z "$2" ]; then
    get-items | column -x
else
    if [ -f /usr/share/alacrittheme/${MODE}s/${2}.yml ]; then
        echo "Installing ${MODE} ${2}.yml"
        rm ~/.config/alacritty/${MODE}.yml &> /dev/null
        ln -s /usr/share/alacrittheme/${MODE}s/${2}.yml ~/.config/alacritty/${MODE}.yml
        alacritty-regenerate
    else
        echo "${2}.yml doesn't exist"
    fi
fi
